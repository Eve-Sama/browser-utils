{
  "manifest_version": 2,
  "name": "Browser Utils",
  "version": "0.0.1",
  "description": "A extension that contains common function for browser",
  "browser_action": {
    "default_icon": "dist/images/48x48.png",
    "default_title": "Browser Utils",
    "default_popup": "dist/pages/popup/popup.html"
  },
  "icons": {
    "16": "dist/images/16x16.png",
    "48": "dist/images/48x48.png",
    "128": "dist/images/128x128.png"
  },
  "commands": {
    "showFunctions": {
      "suggested_key": { "default": "Ctrl+Shift+A" },
      "description": "Show functions"
    }
  },
  "permissions": ["tabs"],
  "web_accessible_resources": [
    "dist/pages/function-list/function-list.html"
  ],
  "background": {
    "page": "dist/pages/background/background.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "node_modules/jquery/dist/jquery.min.js",
        "dist/content-script/content-script.js"
      ]
    }
  ]
}
